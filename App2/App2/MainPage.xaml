<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.MainPage">
    <StackLayout Padding="5,5,5,5" Margin="15">
        <Label Text="Калькулятор" TextColor="Black" FontSize="25" FontAttributes="Bold"></Label>
        <Entry x:Name="num1" Placeholder="Число1"></Entry>
        <Entry x:Name="num2" Placeholder="Число2"></Entry>

        <StackLayout x:Name="stack1" Orientation="Vertical">
            <Button x:Name="sumButton" Text="+" HorizontalOptions="Start"></Button>
            <Button x:Name="diffirenceButton" Text="-" HorizontalOptions="Start"></Button>
            <Button x:Name="multiplyButton" Text="x" HorizontalOptions="Start"></Button>
            <Button x:Name="divisionButton" Text="/" HorizontalOptions="Start"></Button>
            <Label x:Name="totalLAbel" Text="Ответ"></Label>
            
           
        </StackLayout>
        
    </StackLayout>
</ContentPage>
